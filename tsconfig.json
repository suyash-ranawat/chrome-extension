{
    "compilerOptions": {
      "baseUrl": "./",
      "target": "esnext",
      "module": "esnext",
      "lib": ["dom", "esnext"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "types": ["chrome"],
      "paths": {
          "@/*": ["src/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }