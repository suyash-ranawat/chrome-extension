{
  "manifest_version": 3,
  "name": "Search.com Extension",
  "version": "1.0",
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "sidePanel",
    "identity"
  ],
  "host_permissions": [
    "https://search.com/*",
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*",
    "https://graph.facebook.com/*",
    "https://graph.microsoft.com/*",
    "https://appleid.apple.com/*",
    "https://api.search.com/*"
  ],
  "background": {
    "service_worker": "assets/background.js"
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Search.com",
      "keyword": "@search.com",
      "search_url": "https://search.com/?terms={searchTerms}&utm_source=search-extension",
      "favicon_url": "https://search.com/favicon.ico",
      "encoding": "UTF-8",
      "is_default": true
    }
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://google.com/*"
      ],
      "js": ["assets/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "oauth2": {
    "client_id": "953860694439-pjk8stkaijgm7j7e82eegt3v1mj8hmqc.apps.googleusercontent.com",
    "scopes": ["profile", "email"]
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon128.png", "icons/icon48.png", "icons/icon16.png"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}